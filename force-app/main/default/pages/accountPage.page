<apex:page controller="AccountPageController" action="{!CallFutureHere}">
  <apex:form >
    <apex:pageBlock >
      <apex:pageBlockSection >
        Account Name <apex:inputText value="{!accName}" />
        Phone <apex:inputText value="{!accPhone}" />
        Type <apex:inputText value="{!accType}" />
      </apex:pageBlockSection>
      
      <apex:pageBlockButtons >
        <apex:commandButton value="Create Account" action="{!createAccount}" />
      </apex:pageBlockButtons>
    </apex:pageBlock>
  </apex:form>
</apex:page>